<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/woodbackground"
    tools:context=".ScheduleSync">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:text="Range of Dates:"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:textColor="#010b13"
        android:textSize="18sp"
        app:fontFamily="@font/alegreya_sc_black"/>

    <EditText
        android:id="@+id/etRangeOfDates"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/textView2"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textColor="#010b13"
        android:ems="10"
        android:hint="dd/mm/yyyy-dd/mm/yyyy"
        android:inputType="textPersonName"
        android:text=""/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="96dp"
        android:layout_height="55dp"
        android:layout_below="@id/tvEgDate2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-2dp"
        android:gravity="center_vertical"
        android:text="Username:"
        android:textColor="#010b13"
        android:textSize="18sp"
        app:fontFamily="@font/alegreya_sc_black" />

    <EditText
        android:id="@+id/etSyncUsername"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_below="@id/tvEgDate2"
        android:layout_toRightOf="@id/textView3"
        android:textColor="#010b13"
        android:ems="10"
        android:hint="Enter Valid Username"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/bAddOtherSchedule"
        android:layout_width="252dp"
        android:layout_height="40dp"
        android:layout_below="@id/textView3"
        android:background="@drawable/button_design_1"
        android:fontFamily="@font/alegreya_sc_black"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Add User's Schedule" />

    <Button
        android:id="@+id/bResetSync"
        android:layout_width="252dp"
        android:layout_height="40dp"
        android:background="@drawable/button_design_1"
        android:fontFamily="@font/alegreya_sc_black"
        android:layout_marginTop="10dp"
        android:layout_below="@id/bAddOtherSchedule"
        android:layout_centerHorizontal="true"
        android:text="Reset"
/>

    <TextView
        android:id="@+id/tvAllSchedule"
        android:layout_width="360dp"
        android:layout_height="155dp"
        android:layout_below="@id/bResetSync"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/border_style"
        android:text=""
        android:textColor="#010b13"
        app:fontFamily="@font/alegreya_sc_black" />

    <Button
        android:id="@+id/bSync"
        android:layout_width="252dp"
        android:layout_height="40dp"
        android:background="@drawable/button_design_1"
        android:fontFamily="@font/alegreya_sc_black"
        android:layout_below="@id/tvAllSchedule"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:text="LetsSync!" />

    <TextView
        android:id="@+id/tvTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text=""
/>

    <TextView
        android:id="@+id/tvEgDate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Eg. 14/07/2019-19/07/2019"
        android:textColor="#010b13"
        android:textSize="15dp"
        android:layout_below="@id/etRangeOfDates"
        app:fontFamily="@font/andada"
        />

</RelativeLayout>