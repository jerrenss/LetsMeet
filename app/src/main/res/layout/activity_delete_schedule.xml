<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/woodbackground"
    tools:context=".DeleteSchedule">


    <TextView
        android:id="@+id/tvDateDelete"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="200dp"
        android:paddingTop="15dp"
        android:text="Date:"
        android:textAlignment="gravity"
        android:textColor="#010b13"
        android:textSize="20sp"
        app:fontFamily="@font/alegreya_sc_black" />

    <EditText
        android:id="@+id/etDateDelete"
        android:layout_width="246dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/tvDateDelete"
        android:layout_marginTop="200dp"
        android:textColor="#010b13"
        android:ems="10"
        android:hint="dd-mm-yyyy"
        android:inputType="textPersonName"
        android:text=""
 />

    <Button
        android:id="@+id/bDateDelete"
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:background="@drawable/button_design_1"
        android:fontFamily="@font/alegreya_sc_black"
        android:layout_below="@id/tvEgDateHyphen2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Delete"
/>

    <TextView
        android:id="@+id/tvEgDateHyphen2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Eg. 14-07-2019"
        android:textColor="#010b13"
        android:textSize="15dp"
        android:layout_below="@id/etDateDelete"
        app:fontFamily="@font/andada"
         />


</RelativeLayout>